<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/r_icon_imv_image"
        android:layout_width="66dp"
        android:layout_height="match_parent"
        android:src="@drawable/logo" />

    <Button
        android:id="@+id/r_icon_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="Delete" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/r_icon_txv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: " />

        <TextView
            android:id="@+id/r_icon_txv_nameToChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name to change" />

        </LinearLayout>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/r_icon_txv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price: " />

            <TextView
                android:id="@+id/r_icon_txv_priceToChange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="price to change" />

        </LinearLayout>

    </LinearLayout>




</LinearLayout>
